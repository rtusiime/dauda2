# Calendar Sync System - Environment Variables
# Copy this to .env and fill in your values

# Platform Credentials
AIRBNB_EMAIL=your-airbnb-email@example.com
AIRBNB_PASSWORD=your-airbnb-password
BOOKING_EMAIL=your-booking-email@example.com
BOOKING_PASSWORD=your-booking-password

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Browser Settings
HEADLESS=true  # Set to false for debugging

# Database
DATABASE_PATH=calendar_sync.db

# Optional: Email Service (for webhook)
# MAILGUN_API_KEY=your-mailgun-key
# MAILGUN_DOMAIN=mg.yourdomain.com

# Optional: Notifications
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890
# ALERT_PHONE_NUMBER=+1234567890
